\newcommand* \bildZentriert[2] {%
	\newpage\vspace*{\fill}%
	\centerline{%
		\includegraphics[keepaspectratio=true,scale=#1]%
		{#2}}
	\vspace*{\fill}}

\def \anhang[#1,#2] {\begin{bildSeite}\bildZentriert{#1}{#2}\end{bildSeite}}
